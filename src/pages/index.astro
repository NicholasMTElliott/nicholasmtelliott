---
import { getCollection, render } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'
import EmailObfuscated from '../components/EmailObfuscated.astro'

const profileEntry = (await getCollection('profile'))[0]
const skillsEntry = (await getCollection('skills'))[0]
const contactEntry = (await getCollection('contact'))[0]
const defaultAvatarUrl = 'https://gravatar.com/avatar/468788fd550c4128b0c250566ea8729f?s=160'
const displayEmail = contactEntry ? `${contactEntry.data.emailLocal}@${contactEntry.data.emailDomain}` : null

const featuredProjects = (await getCollection('project'))
  .filter(project => project.data.featured)
  .sort((a, b) => {
    const aTime = a.data.endDate?.getTime() ?? Number.POSITIVE_INFINITY
    const bTime = b.data.endDate?.getTime() ?? Number.POSITIVE_INFINITY

    return bTime - aTime
  })

if (!profileEntry || !skillsEntry) {
  throw new Error('Required profile or skills content is missing.')
}

const { Content: ProfileSummary } = await render(profileEntry)
---

<BaseLayout title="Nicholas M. T. Elliott | Home">
  <section class="hero card">
    <img class="hero__avatar" src={profileEntry.data.avatarUrl ?? defaultAvatarUrl} alt={profileEntry.data.fullName} />
    <h2>{profileEntry.data.fullName}</h2>
    <p class="hero__role">{profileEntry.data.headline}</p>
    <p class="hero__org">{profileEntry.data.organization} 路 {profileEntry.data.location}</p>
    <div class="hero__summary">
      <ProfileSummary />
    </div>
    <p class="hero__links">
      <a href={profileEntry.data.linkedin} target="_blank" rel="noreferrer">LinkedIn</a>
      <span>路</span>
      <a href={profileEntry.data.github} target="_blank" rel="noreferrer">GitHub</a>
      {profileEntry.data.x && (
        <>
          <span>路</span>
          <a href={profileEntry.data.x} target="_blank" rel="noreferrer">X</a>
        </>
      )}
    </p>
    {displayEmail && (
      <p class="hero__email">
        <EmailObfuscated displayEmail={displayEmail} aliasTag="bot" />
      </p>
    )}
  </section>

  <section class="skills card">
    <h3>Core Skills</h3>
    <div class="skills__groups">
      {
        skillsEntry.data.groups.map(group => (
          <article>
            <h4>{group.name}</h4>
            <ul>
              {group.items.map(item => <li>{item}</li>)}
            </ul>
          </article>
        ))
      }
    </div>
  </section>

  {featuredProjects.length > 0 && (
    <section class="projects card">
      <h3>Featured Projects</h3>
      <ul>
        {
          featuredProjects.map(project => (
            <li>
              <strong>{project.data.name}</strong>
              {project.data.role && <span> 路 {project.data.role}</span>}
            </li>
          ))
        }
      </ul>
    </section>
  )}
</BaseLayout>

<style lang="scss">
  .hero {
    min-height: clamp(360px, 62vh, 720px);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    gap: 0.6rem;
    background-image: linear-gradient(rgba(13, 16, 23, 0.55), rgba(13, 16, 23, 0.9)),
      url('/images/tianyi-ma-WiONHd_zYI4-unsplash.jpg');
    background-size: cover;
    background-position: center;
    padding-inline: clamp(0.9rem, 2.4vw, 2rem);
  }

  .hero__avatar {
    width: clamp(72px, 10vw, 92px);
    height: clamp(72px, 10vw, 92px);
    border-radius: 50%;
    border: 2px solid color-mix(in srgb, var(--accent) 45%, transparent);
  }

  h2 {
    margin: 0;
    font-size: clamp(1.75rem, 4vw, 2.4rem);
  }

  .hero__role {
    margin: 0;
    color: var(--muted);
  }

  .hero__org {
    margin: 0;
  }

  .hero__summary {
    max-width: 62ch;
  }

  .hero__links {
    margin: 0.5rem 0 0;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero__links a {
    text-decoration: none;
  }

  .hero__summary :global(p) {
    margin: 0.25rem 0 0;
  }

  .hero__email {
    margin: 0.2rem 0 0;
  }

  .skills,
  .projects {
    margin-top: clamp(0.9rem, 1.8vw, 1.3rem);
  }

  .skills__groups {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .skills h3,
  .projects h3,
  .skills h4 {
    margin-top: 0;
  }

  .projects ul,
  .skills ul {
    margin: 0;
    padding-left: 1.1rem;
  }

  @media (max-width: 700px) {
    .hero {
      min-height: 440px;
      align-items: flex-start;
      text-align: left;
      justify-content: flex-end;
      padding-bottom: 1.2rem;
    }

    .hero__summary,
    .hero__links {
      justify-content: flex-start;
    }

    .hero__links span {
      display: none;
    }

    .hero__email {
      align-self: stretch;
    }
  }
</style>
