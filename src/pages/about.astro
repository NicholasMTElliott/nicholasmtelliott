---
import { getCollection, render } from 'astro:content'
import BaseLayout from '../layouts/BaseLayout.astro'

const aboutEntry = (await getCollection('about'))[0]

if (!aboutEntry) {
  throw new Error('Required about content is missing.')
}

const { Content: AboutContent } = await render(aboutEntry)
---

<BaseLayout title="Nicholas M. T. Elliott | About">
  <section class="card prose">
    <h2>{aboutEntry.data.title}</h2>
    <AboutContent />
  </section>
</BaseLayout>

<style lang="scss">
  .prose {
    max-width: min(760px, 100%);
    margin: 0 auto;
    padding: clamp(0.25rem, 1vw, 0.6rem);
  }

  .prose :global(p) {
    margin: 0.75rem 0;
  }

  .prose :global(h3) {
    margin-top: 1.3rem;
  }

  h2 {
    margin-top: 0;
    font-size: clamp(1.5rem, 3vw, 2rem);
  }

  @media (max-width: 700px) {
    .prose {
      padding: 0;
    }
  }
</style>
