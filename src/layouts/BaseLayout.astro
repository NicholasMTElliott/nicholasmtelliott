---
interface Props {
  title?: string
}

const { title = 'Nicholas M. T. Elliott' } = Astro.props
const currentPath = Astro.url.pathname

const nav = [
  { href: '/', label: 'Home' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/about', label: 'About' },
]
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://gravatar.com" />
  </head>
  <body>
    <header class="site-header">
      <div class="site-header__inner">
        <a class="identity" href="/">
          <img
            class="identity__avatar"
            src="https://gravatar.com/avatar/468788fd550c4128b0c250566ea8729f?s=128"
            alt="Nicholas Elliott avatar"
          />
          <div>
            <h1>Nicholas M.T. Elliott</h1>
            <p>Managing Director · Solution Architect · Columbia, MD</p>
          </div>
        </a>
        <nav>
          {
            nav.map(link => (
              <a class={currentPath === link.href ? 'active' : ''} href={link.href}>
                {link.label}
              </a>
            ))
          }
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global lang="scss">
  @use '../styles/global.scss';
</style>
